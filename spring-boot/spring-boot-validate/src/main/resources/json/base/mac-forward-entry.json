{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "nodeId": {
      "type": "string",
      "minLength": 1
    },
    "vlanId": {
      "type": "integer",
      "minimum": 1,
      "maximum": 4094
    },
    "ifIndex": {
      "type": "string",
      "pattern": "^\\d+$"
    },
    "macAddress": {
      "type": "string",
      "pattern": "^[0-9A-Fa-f]{2}(:[0-9A-Fa-f]{2}){5}$"
    },
    "macForwardOperType": {
      "type": "string",
      "enum": [
        "forward",
        "blackhole"
      ]
    }
  },
  "required": [
    "nodeId",
    "vlanId",
    "ifIndex",
    "macAddress",
    "macForwardOperType"
  ]
}
