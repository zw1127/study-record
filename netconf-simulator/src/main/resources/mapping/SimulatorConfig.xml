        from simulator.simulator_config
        where device_id = #{deviceId,jdbcType=VARCHAR}
          and node_name = #{nodeName,jdbcType=VARCHAR}
    </select>

    <select id="deleteByDeviceId" parameterType="java.lang.String">
        delete
        from simulator.simulator_config
        where device_id = #{deviceId,jdbcType=VARCHAR}
